<?xml version="1.0" encoding="utf-8"?>
<resources>




    <!--Circle ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewSubhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LibTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <style name="LibAutoMatch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LibAutoMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibAutoMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibAutoWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibAutoWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibAutoWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibHLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gz_background_gray</item>
    </style>

    <style name="LibVLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gz_background_gray</item>
    </style>

    <style name="LibMatchAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LibMatchAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibMatchAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LibMatchMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibMatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibMatchWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibMatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LibWrapAuto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LibWrapAuto.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibWrapAuto.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LibWrapMatch.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibWrapMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LibWrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibWrapWrap.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LibWrapWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>
</resources>